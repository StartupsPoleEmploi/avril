doctype html
html.html_error_page lang="fr"
  head
    meta content="text/html; charset=UTF-8" http-equiv="Content/type"
    meta charset="UTF-8"
    meta content="IE=edge" http-equiv="X-UA-Compatible"
    meta content="width=device-width, initial-scale=1" name="viewport"

    title 500 - Une erreur s'est produite

    link rel="icon" type="image/x-icon" href=Routes.static_path(@conn,"/favicon.ico")
    link href=Routes.static_path(@conn,"/css/app.css") rel="stylesheet"
    link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"

  body
    .container
      section.hero.is-fullheight
        .hero-body
          .container
            .columns.is-centered
              .column.has-text-centered
                = link(to: Routes.root_path(@conn, :index)) do
                  = img_tag "/images/avril-beta.svg", class: "logo", alt: "Avril", style: "width: 200px;"
                h1.title.is-1 500
                h3.subtitle.is-3 Une erreur s'est produite
                = link "Retour", to: Routes.root_path(@conn, :index), class: "button is-primary is-back is-rounded"

    = if Mix.env == :prod do
      = render VaeWeb.ComponentView, "analytics", conn: @conn
